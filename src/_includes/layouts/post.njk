---
layout: layouts/base.njk
templateClass: tmpl-home
---
<div class="container flex px-4 mx-auto">
  <div>
    <h1 class="text-lg text-indigo-600 font-bold text-left">{{title}}</h1>
    <h3 class="text-md text-indigo-600 font-bold text-right">
      Published at: {{ date | htmlDateString }}</h3>
    <div class="w-2/3 mx-auto text-sm text-gray-900 text-justify">
      {{ content | safe }}
    </div>
    <div class="controls">
      {% if prevPost.url %}
      <p>
        <strong>Previous post</strong>:
        <a class="previous" href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
      </p>
      {% endif %}
      {% if nextPost.url %}
      <p>
        <strong>Next post</strong>:
        <a class="next" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
      </p>
      {% endif %}
    </div>
  </div>
</div>